<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/newsArticlesListFragment">

    <fragment
        android:id="@+id/newsArticlesListFragment"
        android:name="andre.hitchman.com.news.news_list.view.NewsListFragment"
        android:label="News Articles">

        <action
            android:id="@+id/action_caseStudiesList_to_detailedFragment"
            app:destination="@id/detailedFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/detailedFragment"
        android:name="andre.hitchman.com.news.news_article_details.view.NewsArticleDetailsFragment"
        tools:layout="@layout/news_article_detailed_fragment">

        <argument
            android:name="newsArticleId"
            app:argType="integer" />

    </fragment>

</navigation>